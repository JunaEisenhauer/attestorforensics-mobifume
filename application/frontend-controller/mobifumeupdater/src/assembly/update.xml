  <id>update</id>
  <formats>
    <format>tgz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>../mobifumecore/target/</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>MOBIfume.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../mobifumecore/target/classes/</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>**/project.properties</include>
      </includes>
    </fileSet>
  </fileSets>

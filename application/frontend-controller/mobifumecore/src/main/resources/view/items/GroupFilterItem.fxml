<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<HBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER_LEFT" xmlns="http://javafx.com/javafx/8.0.191"
      fx:controller="com.attestorforensics.mobifumecore.controller.group.item.GroupFilterItemController">
    <children>
        <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../images/Filter.png"/>
            </image>
        </ImageView>
        <Text fx:id="filterId" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="infoText">
            <HBox.margin>
                <Insets left="8.0"/>
            </HBox.margin>
        </Text>
        <Button fx:id="errorButton" alignment="CENTER_RIGHT" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false"
                onAction="#onErrorInfo" prefWidth="45.0" style="-fx-background-color: transparent;" visible="false">
            <graphic>
                <ImageView fx:id="errorIcon" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true"/>
            </graphic>
        </Button>
    </children>
    <stylesheets>
        <URL value="@../style/DefaultApp.css"/>
        <URL value="@../style/Controls.css"/>
    </stylesheets>
</HBox>
